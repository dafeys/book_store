<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <p class="card-title"><%= @book.title %></p>
    <p class="card-author"><%= @book.author %></p>
    <p class="card-isbn">
      ISBN:<%= @book.isbn %>
    </p>
    <p class="card-text"><%= @book.description %></p>

    <div class="flex m-4 space-x-4">
      <%= link_to "Back to books", books_path, class: "btn" %>
      <%= link_to "Edit", edit_book_path(@book), class: "btn" %>
  </div>
</div>
