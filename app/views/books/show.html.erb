<div class="show-container">
  <div class="show-card">
    <div class="show-cover">
      <% if @book.book_cover.attached? %>
        <%= image_tag @book.book_cover, class: "object-cover w-full h-full" %>
      <% else %>
        <%= image_tag "http://via.placeholder.com/640x360", class: "object-cover w-full h-full" %>
      <% end %>
    </div>

    <div class="p-6">
      <%= link_to @book.title, edit_book_path(@book), class: "show-title" %>
      <h4 class="show-author"><%= @book.author %></h4>
      <p class="show-isbn">ISBN: <%= @book.isbn %></p>
      <p class="show-text"><%= @book.description %></p>
      <div class="mt-auto ">
        <%= link_to "Back to books", books_path, class: "card-button" %>
      </div>
    </div>
  </div>

  <div class="download-link">
    <% if current_user && @book.book_content.attached? %>
      <%= link_to "Download Book", @book.book_content, download: @book.title, class: "show-btn" %>
    <% end %>
  </div>
</div>
