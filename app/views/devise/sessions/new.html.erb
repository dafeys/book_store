<div class="form-body">
  <div class="w-full max-w-xs">
    <h2 class="form-title">Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <%= f.button :submit, "Log in" %>
    <% end %>

    <span class="text-gray-600">Or you can create an account</span><br>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "form-link" %>
  </div>
</div>
